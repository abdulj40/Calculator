<CustButton@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 50
            multiline: False
            background_color: 0.5, 1, 0.5, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: '7'
            on_press: entry.text += self.text
        CustButton:
            text: '8'
            on_press: entry.text += self.text
        CustButton:
            text: '9'
            on_press: entry.text += self.text
        CustButton:
            text: '+'
            on_press: entry.text += self.text
            background_color: 0.1, 0.6, 0.8, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: '4'
            on_press: entry.text += self.text
        CustButton:
            text: '5'
            on_press: entry.text += self.text
        CustButton:
            text: '6'
            on_press: entry.text += self.text
        CustButton:
            text: '-'
            on_press: entry.text += self.text
            background_color: 0.8, 0.1, 0, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: '1'
            on_press: entry.text += self.text
        CustButton:
            text: '2'
            on_press: entry.text += self.text
        CustButton:
            text: '3'
            on_press: entry.text += self.text
        CustButton:
            text: '*'
            on_press: entry.text += self.text
            background_color: 0.2, 0, 0.9, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: 'AC'
            on_press: entry.text = " "
            background_color: 0.7, 0.8, 0.1, 1
        CustButton:
            text: '0'
            on_press: entry.text += self.text
        CustButton:
            text: '='
            on_press: calculator.calculate(entry.text)
            background_color: 0, 1, 0, 1
        CustButton:
            text: '/'
            on_press: entry.text += self.text
            background_color: 0.4, 1, 0.7, 1